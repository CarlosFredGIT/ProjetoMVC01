@model ProjetoAspNetMVC01.Presentation.Models.TarefasCadastroModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Cadastro de tarefas</h5>

<p>
    Preencha o formulário para incluir uma tarefa.
</p>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <label>Nome da tabela:</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Nome)</span>
        </div>
        <div class="col-md-3">
            <label>Data da tarefa:</label>
            @Html.TextBoxFor(model => model.Data, new { @class = "form-control", @type = "date" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Data)</span>
        </div>
        <div class="col-md-3">
            <label>Hora da tarefa:</label>
            @Html.TextBoxFor(model => model.Hora, new { @class = "form-control", @type = "time" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Hora)</span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-9">
            <label>Descrição da tarefa:</label>
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control", @rows = "4" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Descricao)</span>
        </div>
        <div class="col-md-3">
            <br />
            @Html.RadioButtonFor(model => model.Prioridade, "BAIXA")
            <label>Prioridade Baixa</label>

            <br />
            @Html.RadioButtonFor(model => model.Prioridade, "MEDIA")
            <label>Prioridade Media</label>

            <br />
            @Html.RadioButtonFor(model => model.Prioridade, "ALTA")
            <label>Prioridade Alta</label>

            <br />
        </div>
    </div>

    <br />

    <input type="submit" value="Realizar Cadastro" class="btn btn-success"/>
}
